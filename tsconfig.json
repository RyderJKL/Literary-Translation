{
    "compilerOptions": {
        // 支持 import .json 文件
        "resolveJsonModule": true,
        // esModuleInterop": true,
        // 用实验性的装饰器特性
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "lib": ["dom", "es7"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "packages/*": ["./packages/*"]
        },
        "skipLibCheck": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "noResolve": false,
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": true,
        "allowJs": false,
        "jsx": "react",
        "declaration": true,
        // 编译后的 types 目录
        "declarationDir": "./dist/typings",
        // 自定义的 types 目录
        "typeRoots": ["./types", "./node_modules/@types"]
    },
    "skipLibCheck": true,
    "exclude": [
        "packages",
        "node_modules",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "tslint:latest",
        "tslint-config-prettier",
        "mock"
    ],
    "compileOnSave": false,
    "awesomeTypescriptLoaderOptions": {
        "forkChecker": true,
        "useWebpackText": true
    }
}
