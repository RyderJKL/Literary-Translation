{
    "compilerOptions": {
        // 用实验性的装饰器特性
        "experimentalDecorators": true,
        // Module '"/Users/macbook/workSpace/lego-admin/node_modules/@types/react/index"' has no default export.
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "lib": [
            "dom",
            "es7"
        ],
        "baseUrl": "src",
        "paths": {
            "@/*": [
                "*"
            ],
            "pages/*": [
                "pages/*"
            ],
            "actions/*": [
                "actions/*"
            ],
            "reducers/*": [
                "reducers/*"
            ],
            "services/*": [
                "services/*"
            ],
            "epics/*": [
                "epics/*"
            ],
            "models/*": [
                "models/*"
            ],
            "components/*": [
                "components/*"
            ],
            "store/*": [
                "store/*"
            ],
            "utils/*": [
                "utils/*"
            ],
            "vendor/*": [
                "vendor/*"
            ],
            "routes/*": [
                "routes/*"
            ],
            "constant/*": [
                "constant/*"
            ],
            "middleware/*": [
                "middleware/*"
            ],
            "layout/*": [
                "layout/*"
            ]
        },
        "skipLibCheck": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noResolve": false,
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": true,
        "allowJs": false,
        "jsx": "react",
        "declaration": true,
        // 编译后的 types 目录
        "declarationDir": "./dist/typings",
        // 自定义的 types 目录
        "typeRoots": ["./types"]
    },
    "skipLibCheck": true,
    "exclude": [
        "node_modules",
        "typings"
    ],
    "allowSyntheticDefaultImports": true,
    "compileOnSave": false,
    "awesomeTypescriptLoaderOptions": {
        "forkChecker": true,
        "useWebpackText": true
    }
}
