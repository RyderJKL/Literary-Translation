{
    "compilerOptions": {
        // 支持 import .json 文件
        "resolveJsonModule": true,
        // 允许在 common.js 模块中使用 es6 模块的导入规则
        "esModuleInterop": true,
        // 用实验性的装饰器特性
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "lib": [
            "dom",
            "es7"
        ],
        "baseUrl": "../",
        "paths": {
            "@/*": ["./src/*"]
        },
        "skipLibCheck": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noResolve": false,
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": true,
        "allowJs": false,
        "declaration": true,
        // 编译后的 types 目录
        "declarationDir": "./dist/typings",
        // 自定义的 types 目录
        "typeRoots": ["../node_modules/@types"]
    },
    "skipLibCheck": true,
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "tslint:latest",
        "tslint-config-prettier"
    ],
    "compileOnSave": false,
    "awesomeTypescriptLoaderOptions": {
        "forkChecker": true,
        "useWebpackText": true
    }
}
